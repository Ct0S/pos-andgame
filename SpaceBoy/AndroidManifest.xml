<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unopar.spaceboy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:name="com.unopar.spaceboy.base.XApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.unopar.spaceboy.SplashActivity"
            android:configChanges="orientation|screenSize" >
           
              <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>    
        
        <activity
            android:name="com.unopar.spaceboy.MenuActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.unopar.spaceboy.PlayActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>